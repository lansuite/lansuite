<?xml version="1.0" encoding="UTF-8"?>
<menu>
	<pos>8</pos>	<!-- The position in the navigation, where this entry should be located. 1 = top; 100 = botom -->

	<entry>
		<action>default</action>  <!-- This is the trigger standing in the URL behin the "action=" -->
		<file>show</file>   <!-- This ist the file, which is executed, when the trigger above was caled -->
		<caption>Menuitem</caption>	<!-- The Text displayed in the menubar -->
		<hint>Help-Text</hint>	<!-- This hint is shown, when the mouse resides over this menu item -->
		<link>?mod=sample&amp;action=show</link>  <!-- This is the link-target of the current menu item -->
		<requirement>0</requirement>	<!-- 0 = All; 1 = Logged in; 2 = Admin; 3 = Superadmin; 4 = No Admins -->
		<needed_config></needed_config>
		<level>0</level> <!-- 0 for Top level entry; 1 for sub entry -->
	</entry>
	
	<!-- If you only like to add a file, but not a menu entry, do the following-->
	<entry>
		<action>action_url</action>
		<file>action_file</file>
		<requirement>0</requirement>
	</entry>
</menu>
